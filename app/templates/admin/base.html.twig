<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin Dashboard!{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('admin') }}
    {% endblock %}
</head>
<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" href="{{ path('admin_main_page') }}">Admin Dashboard</a>
    <div class="navbar-nav">
        <div class="nav-item text-nowrap">
            <a class="nav-link px-3" href="{{ path('admin_logout') }}">Sign out</a>
        </div>
    </div>
</header>
<body>
    <div id="myDiv" class="container-fluid">
        <div id="myRow" class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3 sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link text-secondary" href="{{ path('admin_main_page') }}">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link text-secondary" href="{{path('admin_show_users')}}">Users</a></li>
                        <li class="nav-item"><a class="nav-link text-secondary" href="{{path('admin_show_appointments')}}">Appointments</a></li>
                        <li class="nav-item"><a class="nav-link text-secondary" href="{{ path('admin_show_buildings') }}">Hospitals</a></li>
                        <li class="nav-item"><a class="nav-link text-secondary" href="{{ path('admin_show_medics') }}">Medics</a></li>
                        <li class="nav-item"><a class="nav-link text-secondary" href="#">Analytics</a></li>
                        <li class="nav-item"><a class="nav-link text-secondary" href="#">Newsletter</a></li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                {% block main %}{% endblock %}
            </main>
        </div>
    </div>
</body>
</html>

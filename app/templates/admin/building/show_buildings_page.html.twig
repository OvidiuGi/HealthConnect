{% extends 'admin/base.html.twig' %}

{% block main %}
    <main class="col-md-8 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-bottom">
            <h1 class="h2">Hospitals</h1>
            <div class="actionContainer">
                <a class="btn btn-sm btn-outline-secondary" href="{{path('admin_add_building')}}"> New</a>
            </div>
        </div>
        <div class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 table-responsive">
            <table class="table table-striped table-sm align-items-center">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Address</th>
                    <th scope="col">City</th>
                    <th scope="col">Start Hour</th>
                    <th scope="col">End Hour</th>
                </tr>
                </thead>
                <tbody>
                {% for building in buildings%}
                    <tr>
                        <td>{{building.id}}</td>
                        <td>{{ building.address }}</td>
                        <td>{{ building.city }}</td>
                        <td>{{ building.startHour.format('H:i') }}</td>
                        <td>{{ building.endHour.format('H:i') }}</td>
                        <td>
                            <div class="actionContainer">
                                <a class="btn btn-sm btn-outline-secondary" href="{{path('admin_edit_buildings',{'id': building.id})}}"> Edit</a>
                                <a type="button" class="btn-close btn btn-sm btn-outline-secondary" href="#" aria-label="Close"></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
    {% if totalPages > 0 %}
    <nav aria-label="Pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a href="#" class="nav-link text-secondary page-link">Previous</a>
            </li>
            {% for i in 1..totalPages%}
                <li class="page-item"><a class="nav-link text-secondary page-link" href="{{ path('admin_show_buildings') }}?page={{i}}">{{i}}</a></li>
            {%endfor%}
            <li class="page-item">
                <a href="#" class="nav-link text-secondary page-link">Next</a>
            </li>
        </ul>
    </nav>
    {% endif %}
{% endblock %}
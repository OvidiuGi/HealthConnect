{% extends 'admin/base.html.twig' %}

{% block main %}
    <main class="col-md-8 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-bottom">
            <h1 class="h2">Medics</h1>
        </div>
        <div class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 table-responsive">
            <table class="table table-striped table-sm align-items-center">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telephone Nr</th>
                    <th scope="col">CNP</th>
                    <th scope="col">Specialization</th>
                    <th scope="col">Experience</th>
                    <th scope="col">Office</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users%}
                    <tr>
                        <td>{{user.id}}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.telephoneNr }}</td>
                        <td>{{ user.cnp }}</td>
                        <td>{{ user.specialization }}</td>
                        <td>{{ user.experience }}</td>
                        {% if user.office is null %}
                            <td>None</td>
                        {% else %}
                            <td>{{ user.office.name }}</td>
                        {% endif %}
                        <td>
                            <div class="actionContainer">
                                <a class="btn btn-sm btn-outline-secondary" href="{{path('admin_edit_medic',{'id': user.id})}}"> Edit</a>
                                <a type="button" class="btn-close btn btn-sm btn-outline-secondary" href="#" aria-label="Close"></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
    {% if totalPages > 0 %}
    <nav aria-label="Pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a href="#" class="nav-link text-secondary page-link">Previous</a>
            </li>
            {% for i in 1..totalPages%}
                <li class="page-item"><a class="nav-link text-secondary page-link" href="{{ path('admin_show_medics') }}?page={{i}}">{{i}}</a></li>
            {%endfor%}
            <li class="page-item">
                <a href="#" class="nav-link text-secondary page-link">Next</a>
            </li>
        </ul>
    </nav>
    {% endif %}
{% endblock %}
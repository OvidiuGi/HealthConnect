{% extends 'admin/base.html.twig' %}
{% block title %}Hospital form{% endblock %}
{% block main %}
    <div class="container">
        {{ form_start(form, {method: 'POST'}) }}
        <h1 class="text-center">Edit hospital</h1>
        <div class="form-floating">
            {{ form_widget(form.address, {attr: {class: 'form-control', placeholder: ''
            }}) }}
            {{ form_label(form.address, 'Address', {label_attr: {class: 'form-label'}}) }}
            {{ form_errors(form.address) }}
        </div>
        <div class="form-floating">
            {{ form_widget(form.city, {attr: {class: 'form-control', placeholder: ''
            }}) }}
            {{ form_label(form.city, 'City', {label_attr: {class: 'form-label'}}) }}
            {{ form_errors(form.city) }}
        </div>
        <div class="form-floating">
            {{ form_widget(form.startHour, {attr: {class: 'form-control', placeholder: ''
            }}) }}
            {{ form_label(form.startHour, 'Start Time', {label_attr: {class: 'form-label'}}) }}
            {{ form_errors(form.startHour) }}
        </div>
        <div class="form-floating">
            {{ form_widget(form.endHour, {attr: {class: 'form-control'
            }}) }}
            {{ form_label(form.endHour, 'End Time', {label_attr: {class: 'form-label'}}) }}
            {{ form_errors(form.endHour) }}
        </div>
        <div class="form-floating">
            {{ form_widget(form.name, {attr: {class: 'form-control', placeholder: ''
            }}) }}
            {{ form_label(form.name, 'Name', {label_attr: {class: 'form-label'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="form-floating">
            {{ form_widget(form.phone, {attr: {class: 'form-control', placeholder: ''
            }}) }}
            {{ form_label(form.phone, 'Phone', {label_attr: {class: 'form-label'}}) }}
            {{ form_errors(form.phone) }}
        </div>
        <div class="form-floating">
            {{ form_widget(form.email, {attr: {class: 'form-control', placeholder: ''
            }}) }}
            {{ form_label(form.email, 'Email', {label_attr: {class: 'form-label'}}) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="form-floating">
            {{ form_widget(form.description, {attr: {class: 'form-control', placeholder: ''
            }}) }}
            {{ form_label(form.description, 'Description', {label_attr: {class: 'form-label'}}) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="form-floating">
            {{ form_widget(form.postalCode, {attr: {class: 'form-control', placeholder: ''
            }}) }}
            {{ form_label(form.postalCode, 'Postal Code', {label_attr: {class: 'form-label'}}) }}
            {{ form_errors(form.postalCode) }}
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
        {{ form_end(form) }}
    </div>

{% endblock %}
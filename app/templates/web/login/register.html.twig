{% extends 'web/form/base.form.html.twig' %}
{% block title %} Sign in {% endblock %}
{% block body %}
        {{ form_start(registerForm, {method: 'POST'}) }}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <h1>Please sign in</h1>
            <div class="form-floating">
                {{ form_widget(registerForm.firstName, {attr: {class: 'form-control', placeholder: ''
                }}) }}
                {{ form_label(registerForm.firstName, 'First name', {label_attr: {class: 'form-label'}}) }}
                {{ form_errors(registerForm.firstName) }}
            </div>
            <div class="form-floating">
                {{ form_widget(registerForm.lastName, {attr: {class: 'form-control', placeholder: ''
                }}) }}
                {{ form_label(registerForm.lastName, 'Last name', {label_attr: {class: 'form-label'}}) }}
                {{ form_errors(registerForm.lastName) }}
            </div>
            <div class="form-floating">
                {{ form_widget(registerForm.email, {attr: {class: 'form-control', placeholder: ''
                }}) }}
                {{ form_label(registerForm.email, 'Email address', {label_attr: {class: 'form-label'}}) }}
                {{ form_errors(registerForm.email) }}
            </div>
            <div class="form-floating">
                {{ form_widget(registerForm.plainPassword.first, {attr: {class: 'form-control', placeholder: ''
                }}) }}
                {{ form_label(registerForm.plainPassword.first, 'Password', {label_attr: {class: 'form-label'}}) }}
                {{ form_errors(registerForm.plainPassword.first) }}
            </div>
            <div class="form-floating">
                {{ form_widget(registerForm.plainPassword.second, {attr: {class: 'form-control', placeholder: ''
                }}) }}
                {{ form_label(registerForm.plainPassword.second, 'Repeat Password', {label_attr: {class: 'form-label'}}) }}
                {{ form_errors(registerForm.plainPassword.second) }}
            </div>
            <div class="form-floating">
                {{ form_widget(registerForm.telephoneNr, {attr: {class: 'form-control', placeholder: ''
                }}) }}
                {{ form_label(registerForm.telephoneNr, 'Telephone number', {label_attr: {class: 'form-label'}}) }}
                {{ form_errors(registerForm.telephoneNr) }}
            </div>
            <div class="form-floating">
                {{ form_widget(registerForm.cnp, {attr: {class: 'form-control', placeholder: ''
                }}) }}
                {{ form_label(registerForm.cnp, 'CNP', {label_attr: {class: 'form-label'}}) }}
                {{ form_errors(registerForm.cnp) }}
            </div>
            <div class="form-floating">
                {{ form_widget(registerForm.role, {attr: {class: 'form-control'}}) }}
                {{ form_label(registerForm.role, 'Role', {label_attr: {class: 'form-label'}}) }}
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    {{ form_end(registerForm) }}
{% endblock %}